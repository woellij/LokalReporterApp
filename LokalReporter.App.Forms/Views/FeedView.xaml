<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:LokalReporter.App.FormsApp.Views;assembly=LokalReporter.App.FormsApp"
             x:Class="LokalReporter.App.FormsApp.Views.FeedView"
      Padding="0,8,0,4"
      x:Name="Root"
      >
  <StackLayout>
    <Grid>
      <StackLayout Orientation="Horizontal">
        <Label FontSize="Large" LineBreakMode="TailTruncation" Text="{Binding Title}" />
        <Label FontSize="Large" Text=" >" />
      </StackLayout>
      <Button Opacity="0" MinimumHeightRequest="0" HeightRequest="0" VerticalOptions="Fill" Command="{Binding ShowMore}" />
    </Grid>

    <views:ArticleCarouselView HeightRequest="200" BindingContext="{Binding TopArticles}" IsVisible="{Binding HasItems}"  VerticalOptions="Fill" ItemsSource="{Binding Items}" />
    <views:SimpleFeed ItemsSource="{Binding Articles.Items}" RestockCommand="{Binding Articles.Restock}" ItemClickCommand="{Binding ShowDetails}" />
  </StackLayout>

  <ActivityIndicator VerticalOptions="Center" HorizontalOptions="Center" IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />
</Grid>