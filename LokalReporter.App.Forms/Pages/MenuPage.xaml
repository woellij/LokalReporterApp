<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             xmlns:viewModels="clr-namespace:LokalReporter.App.FormsApp.ViewModels;assembly=LokalReporter.App.FormsApp"
             x:Class="LokalReporter.App.FormsApp.Pages.MenuPage" x:Name="Page">
 
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>
    <ContentView VerticalOptions="Fill" Padding="20">
      <Image VerticalOptions="Fill" Source="lokalreporter_logo.png" />
    </ContentView>

    <ListView x:Name="MenuListView" Grid.Row="1" IsGroupingEnabled="True" GroupDisplayBinding="{Binding Title}" ItemsSource="{Binding Items}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Title}" CommandParameter="{Binding}"
                    Command="{Binding BindingContext.Navigate, Source={x:Reference Page}}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>

</ContentPage>