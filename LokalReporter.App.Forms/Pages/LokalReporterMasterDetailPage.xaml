<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage x:Class="LokalReporter.App.FormsApp.Pages.LokalReporterMasterDetailPage"
                  xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  x:Name="Page"
                  Title="{Binding Title}">

    <Page.ToolbarItems>
        <ToolbarItem Clicked="ProfileMenuItemClicked" Text="Profil">
            <ToolbarItem.Order>
                <OnPlatform Android="Secondary"
                            WinPhone="Secondary"
                            iOS="Primary"
                            x:TypeArguments="ToolbarItemOrder" />
            </ToolbarItem.Order>
        </ToolbarItem>
    </Page.ToolbarItems>
</MasterDetailPage>